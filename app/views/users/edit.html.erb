<h2>Edit profile</h2>
<%= form_for :user, url: user_path(@user), method: :patch do |f| %>
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>
	<p>
		Username<br>
		<%= f.text_field(:name, {:class => 'form-control', :value => current_user.name}) %>
	</p>
	<p>
		Email<br>
		<%= f.text_area(:email, {:class => 'form-control', :value => current_user.email}) %>
	</p>
	<div class="form-group">
		<input type="password" name="user[password]" placeholder="new password" class="form-control mb-2">
		<input type="password" name="user[password_confirmation]" placeholder="new password confirmation" class="form-control">
	</div>

	<p>
		<%= f.submit({:class => 'btn btn-success'}) %>
	</p>
<% end %>