<!DOCTYPE html>

<html>
	<head>
		<title>Sign In</title>
	</head>	
	<body>
		<div class="wrapper fadeInDown">
  			<div id="formContent">
    		<!-- Tabs Titles -->
			<h1>Sign In</h1>

				<form action="/sessions" method="POST">
					<div class="form-group">
						<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
						<input type="email" name="login[email]" placeholder="email" class="form-control mb-2">
						<input type="password" name="login[password]" placeholder="password" class="form-control mb-2">
					</div>
					<input type="submit" name="submit" class="submit btn btn-outline-primary">
					<div class="container pl-0 ml-0">
						Don't have an account?<%= link_to "Sign Up", register_path, :class => 'link' %>
					</div>
				</form>

				<div class="errors">
					<% if flash[:login_errors]%>
					<% flash[:login_errors].each do |error| %>
						<p><%= error %></p>
						<% end %>
					<% end %>

				</div>
			</div>
		</div>
	</body>
</html>