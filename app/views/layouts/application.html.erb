<!DOCTYPE html>
<html>
  <head>
    <title>VeryMe</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-bold">VeryMe</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <span class="p-2 text-dark"><%= link_to "Home", home_path %></span>
        <span class="p-2 text-dark"><%= link_to "Add Post", new_post_path %></span>
        <span class="p-2 text-dark"><%= link_to "About us", about_path %></span>
         <% if logged_in? %>
           <span class="p-2 text-dark"><%= link_to current_user.name, home_path %></span>
           <span class="p-2 text-dark"><%= link_to "Log out", destroy_path %></span>
         <% else %>
           <span class="p-2 text-dark"><%= link_to 'Sign In', login_path %></span>
         <% end %>
      </nav>
    </div>
  
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
